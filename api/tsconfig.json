  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../lib/src/*"]
    }
  },
  "references": [
    {
      "path": "../lib/tsconfig.json"
    }
  ]
}
